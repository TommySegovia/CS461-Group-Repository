@using PeakPals_Project.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@model CommunityGroup

<body id="community-group-body">

    <div class="justify-context-center text-center" id="community-group-card">
        <div class="container">
            <div class="row">
                <div class="col" id="group-name-header">
                    <h1>Owner of @Model.Name</h1>

                </div>
            </div>
            <div class="row" id="group-body">
                <div class="col">
                    <p id="members-text" data-bs-toggle="modal" data-bs-target="#memberModal"><span
                            id="member-count-span"></span> members</p>
                </div>
                <div class="col">
                    <p>@Model.Description</p>
                </div>
            </div>
            <div class="row" id="group-footer">
                <div class="col">
                    @* <button type="submit" class="btn btn-warning" id="community-group-join-button"
                    style="border-radius: 5px;">Join</button> *@
                    <button type="submit" id="community-group-button" data-group-id="@Model.Id"></button>
                </div>
            </div>

            <div class="modal fade" id="memberModal" tabindex="-1" aria-labelledby="memberModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <h5 class="modal-title" id="memberModalLabel">Members</h5>
                        <div class="modal-body">
                            <div id="member-list"></div>

                            <button type="button" id="modalCloseButton" class="btn btn-secondary"
                                data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

            @* Modal for the owner to select a new owner when they try to leave *@
            <div class="modal fade" id="newOwnerModal" tabindex="-1" aria-labelledby="newOwnerModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="newOwnerModalLabel">Select a new owner</h5>
                        </div>
                        <div class="modal-body">
                            <select id="new-owner-select" class="form-select"></select>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" id="modalCancelButton">Close</button>
                            <button type="button" class="btn btn-primary" id="modalConfirmButton">Confirm</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>

@section Scripts
{
    <script src="~/js/communityGroupsOwner.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/communityGroup.css">
    <link rel="stylesheet" href="~/css/site.css">
}
