<body id="index-body">
    <div id="user-search-div">
        <div class="text-center">
            <h1 class="display-4 text-white welcome my-5">Search Our Community</h1>
            <div class="input-group" id="community-input" style="height: 3.5em;">
                <input type="text" class="form-control" id="search-input" aria-label="sizing example input"
                    aria-describedby="inputGroup-sizing-default" placeholder="Enter a Username here!">
                <button type="submit" class="btn btn-warning" id="search-button"
                    style="border-radius: 5px;">Search</button>
            </div>
            <div>
                <p id="community-validation-warning"></p>
            </div>
        </div>

        <div class="mt-3 py-3">
            <div id="search-results" class="row g-0">
                @* JS will instantiate the template and put a bunch of them here.*@
            </div>
        </div>

        <template id="results-template">
            <div class="card" id="profiles-div">
                <div class="row">
                    <div class="col-3 d-flex align-items-center">
                        <img id="userImage" src="" width="200" />
                    </div>
                    <div class="col-9 d-flex flex-column justify-content-center">
                        <a href="#" id="profile-link"></a>
                    </div>
                </div>
            </div>
        </template>
    </div>

    <div id="community-page-break">
        <div class="text-center">
            <h1 class="display-4 text-white welcome my-5">Checkout Community Groups</h1>
        </div>
    </div>

    <div id="community-group-search-div">
        <div class="input-group" id="community-group-input" style="height: 3.5em;">
            <input type="text" class="form-control" id="community-group-search-input" aria-label="sizing example input"
                aria-describedby="inputGroup-sizing-default" placeholder="Find a Group">
            <button type="submit" class="btn btn-warning" id="community-group-search-button"
                style="border-radius: 5px;">Search</button>
        </div>
        <div id="or-text-div" class="text-center">
            <div class="text-white" id="or-text">or</div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-warning" id="community-group-create-button"
                style="border-radius: 5px;">Create One!</button>
        </div>

        <div id="community-group-search-results"></div>
    </div>




    <template id="community-group-template">
        <div class="card" id="community-group-div">
            <div class="row">
                <div class="col-3 d-flex align-items-center">
                    <div id="group-link-name"></div>
                </div>
                <div class="col-9 d-flex flex-column justify-content-center">
                    <div id="group-description"></div>
                </div>
            </div>
        </div>
    </template>


</body>



@section Scripts
{
    <script src="~/js/community.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/community.css">
    <link rel="stylesheet" href="~/css/site.css">
}
