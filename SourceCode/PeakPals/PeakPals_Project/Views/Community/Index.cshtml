<body id="index-body">
    <div id="user-search-div">
        <div class="text-center">
            <h1 class="display-4 text-white welcome my-5">Search Our Community</h1>
            <div class="input-group" id="community-input" style="height: 3.5em;">
                <input type="text" class="form-control" id="search-input" aria-label="sizing example input"
                    aria-describedby="inputGroup-sizing-default" placeholder="Enter a Username here!">
                <button type="submit" class="btn btn-warning" id="search-button"
                    style="border-radius: 5px;">Search</button>
            </div>
            <div>
                <p id="community-validation-warning"></p>
            </div>
        </div>

        <div class="mt-3 py-3">
            <div id="search-results" class="row g-0">
                @* JS will instantiate the template and put a bunch of them here.*@
            </div>
        </div>

        <template id="results-template">
            <div class="card" id="profiles-div">
                <div class="row">
                    <div class="col-3 d-flex align-items-center">
                        <img id="userImage" src="" width="200" />
                    </div>
                    <div class="col-9 d-flex flex-column justify-content-center">
                        <a href="#" id="profile-link"></a>
                    </div>
                </div>
            </div>
        </template>
    </div>

    <div id="community-page-break">
        <div class="text-center">
            <h1 class="display-4 text-white welcome my-5">Checkout Community Groups</h1>
        </div>
    </div>

    <div id="community-group-search-div">

        <div id="joined-community-groups">
            <h2 class="text-center text-white" id="joined-group-text">Groups You've Joined</h2>
            <div id="joined-groups" class="row g-0">
                @* JS will instantiate the template and put a bunch of them here.*@
            </div>
        </div>
        <div class="input-group" id="community-group-input" style="height: 3.5em;">
            <input type="text" class="form-control" id="community-group-search-input" aria-label="sizing example input"
                aria-describedby="inputGroup-sizing-default" placeholder="Find a Group">
            <button type="submit" class="community-buttons" id="community-group-search-button"
                style="border-radius: 5px;">Search</button>

        </div>
        <div>
            <p id="community-group-validation-warning"></p>
        </div>
        <div id="or-text-div" class="text-center">
            <div class="text-white" id="or-text">or</div>
        </div>
        <div class="text-center">
            <button type="submit" class="community-buttons" id="community-group-create-button" data-bs-toggle="modal"
                data-bs-target="#createGroupModal" style="border-radius: 5px;">Create One!</button>
        </div>

        <div id="community-group-search-results"></div>
    </div>

    <template id="joined-community-group-template">
        <div class="card" id="community-group-div">
            <div class="row">
                <div class="col-3 d-flex align-items-center community-group-name">
                    <a id="group-link-name"></a>
                </div>
                <div class="col-9 d-flex flex-column justify-content-center community-group-description">
                    <a id="group-description"></a>
                </div>
            </div>
        </div>
    </template>




    <template id="community-group-template">
        <div class="card" id="community-group-div">
            <div class="row">
                <div class="col-3 d-flex align-items-center community-group-name">
                    <a id="group-link-name"></a>
                </div>
                <div class="col-9 d-flex flex-column justify-content-center community-group-description">
                    <a id="group-description"></a>
                </div>
            </div>
        </div>
    </template>


    <div class="modal fade" id="createGroupModal" tabindex="-1" aria-labelledby="createGroupModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <h5 class="modal-title" id="createGroupModalLabel">Create a Group</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                <p id="createGroupValidation"></p>
                <div class="modal-body">
                    <form id="createGroupForm">
                        <div class="mb-3">
                            <label for="groupName" class="form-label">Group Name</label>
                            <input type="text" class="form-control" id="groupName" name="groupName">
                        </div>
                        <div class="mb-3">
                            <label for="groupDescription" class="form-label">Group Description</label>
                            <textarea class="form-control" maxlength="100" id="groupDescription" name="groupDescription"
                                rows="5"></textarea>
                        </div>
                        <button type="submit" id="create-group-button" class="btn btn-primary">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


</body>



@section Scripts
{
    <script src="~/js/community.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/community.css">
    <link rel="stylesheet" href="~/css/site.css">
}
