@{
    ViewData["Title"] = "Report Page";
}

<body id="report-body">
    <div class="text-center" id="report-div">
        <h1 class="display-4 text-white welcome">See your performance</h1>

        <!-- Nav tabs -->
        <ul class="nav nav-tabs" id="testTabs">
            <li class="nav-item">
                <a class="nav-link active" id="history-tab" data-toggle="tab" href="#test-history">Test History</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="analysis-tab" data-toggle="tab" href="#test-analysis">Test Analysis</a>
            </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content" id="report-tab-content">


            <div class="accordion accordion-flush" id="accordionFilter">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="filter-headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#filter-collapseOne" aria-expanded="false"
                            aria-controls="filter-collapseOne">
                            <div class="container">
                                <div class="row">
                                    <div class="col-11">
                                    </div>
                                    <div class="col-1">
                                        <img src="~/images/FilterIcon.png" style="width: 40px;" alt="">
                                    </div>
                                </div>
                            </div>

                        </button>
                    </h2>
                    <div id="filter-collapseOne" class="accordion-collapse collapse" aria-labelledby="filter-headingOne"
                        data-bs-parent="#accordionFilter">
                        <div class="accordion-body">
                            <!-- Filter Form -->
                            <form id="filter-form">
                                <div class="container">
                                    <div class="row justify-content-center">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <!--minimum age-->
                                                <div class="container">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label for="minAge">Minimum Age</label>
                                                                <input type="number" class="form-control" id="minAge"
                                                                    name="minAge" min="0" max="100" value="0">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label for="maxAge">Maximum Age</label>
                                                                <input type="number" class="form-control" id="maxAge"
                                                                    name="maxAge" min="0" max="100" value="100">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label for="gender">Gender</label>
                                                                <select class="form-control" id="gender" name="gender">
                                                                    <option value="Male">Male</option>
                                                                    <option value="Female">Female</option>
                                                                    <option value="Other">Other</option>
                                                                    <option selected value="All">All</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label for="climbingExperience">Climbing
                                                                    Experience</label>
                                                                <select class="form-control" id="climbingExperience"
                                                                    name="climbingExperience">
                                                                    <option value="Beginner">Beginner</option>
                                                                    <option value="Intermediate">Intermediate</option>
                                                                    <option value="Advanced">Advanced</option>
                                                                    <option selected value="All">All</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label for="minimumClimbingGrade">Minimum Climbing
                                                                    Grade</label>
                                                                <select class="form-control" id="minimumClimbingGrade"
                                                                    name="minimumClimbingGrade">
                                                                    <option selected value="0">V0</option>
                                                                    <option value="1">V1</option>
                                                                    <option value="2">V2</option>
                                                                    <option value="3">V3</option>
                                                                    <option value="4">V4</option>
                                                                    <option value="5">V5</option>
                                                                    <option value="6">V6</option>
                                                                    <option value="7">V7</option>
                                                                    <option value="8">V8</option>
                                                                    <option value="9">V9</option>
                                                                    <option value="10">V10</option>
                                                                    <option value="11">V11</option>
                                                                    <option value="12">V12</option>
                                                                    <option value="13">V13</option>
                                                                    <option value="14">V14</option>
                                                                    <option value="15">V15</option>
                                                                    <option value="16">V16</option>
                                                                    <option value="17">V17</option>

                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label for="maximumClimbingGrade">Maximum Climbing
                                                                    Grade</label>
                                                                <select class="form-control" id="maximumClimbingGrade"
                                                                    name="maximumClimbingGrade">
                                                                    <option value="0">V0</option>
                                                                    <option value="1">V1</option>
                                                                    <option value="2">V2</option>
                                                                    <option value="3">V3</option>
                                                                    <option value="4">V4</option>
                                                                    <option value="5">V5</option>
                                                                    <option value="6">V6</option>
                                                                    <option value="7">V7</option>
                                                                    <option value="8">V8</option>
                                                                    <option value="9">V9</option>
                                                                    <option value="10">V10</option>
                                                                    <option value="11">V11</option>
                                                                    <option value="12">V12</option>
                                                                    <option value="13">V13</option>
                                                                    <option value="14">V14</option>
                                                                    <option value="15">V15</option>
                                                                    <option value="16">V16</option>
                                                                    <option selected value="17">V17</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>


                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Submit button -->
                                <div class="container">
                                    <div class="row">
                                        <div class="col">
                                            <button type="" id="filterButtonSubmit"
                                                class="btn btn-primary mt-3">Submit</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>


            <div class="tab-pane fade show active" id="test-history">
                <div class="container">

                    @{
                        var tests = new[]
                        {
                    new { Name = "Hang", id = "hang" },
                    new { Name = "Pull", id = "pull" },
                    new { Name = "Hammer Curl", id = "hammerCurl" },
                    new { Name = "Hip Flexibility", id = "hipFlexibility" },
                    new { Name = "Hamstring Flexibility", id = "hamstringFlexibility" },
                    new { Name = "Repeater", id = "repeater"},
                    new { Name = "Smallest Edge", id = "smallestEdge" },
                    new { Name = "Campus Board", id = "campusBoard" },
                    };
                    }

                    @foreach (var test in tests)
                    {
                        <div class="row pt-3" style="border-top: 1px solid black;">
                            <div class="col">
                                <h2>@test.Name Test Results</h2>
                                <div id="@test.id-test-results"></div>
                            </div>
                        </div>
                        <div class="row pt-3">
                            <div class="col-6">
                                <div id="@test.id-test-table"></div>
                            </div>
                            <div class="col-6">
                                <div id="@test.id-test-graph"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="tab-pane fade" id="test-analysis">
                @foreach (var test in tests)
                {
                    <div id="@test.id-test-average-div" style="border: 1px solid black;">
                        <h2>@test.Name Test Average</h2>
                        <div>
                            <div class="container">
                                <div class="row justify-content-center">
                                    <div style="font-weight: bold; background-color: #ffa500;" class="col-5 m-3" id="@test.id-test-recent">

                                    </div>
                                    <div style="font-weight: bold; background-color: #ffa500;" class="col-5 m-3" id="@test.id-test-average">

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <script src="~/js/report.js"></script>
}
@section Styles {
    <link rel="stylesheet" href="~/css/report.css">
}